<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anthony.simon.GameActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_red"
        android:layout_marginTop="55dp"
        android:background="#ff0b00"
        android:maxWidth="130dp"
        android:maxHeight="130dp"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_green"
        android:background="#00dc20"
        android:maxWidth="130dp"
        android:maxHeight="130dp"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:layout_alignTop="@+id/button_red"
        android:layout_toRightOf="@+id/button_red"
        android:layout_toEndOf="@+id/button_red" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_blue"
        android:background="#4c9cff"
        android:maxWidth="130dp"
        android:maxHeight="130dp"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:layout_below="@+id/button_red"
        android:layout_toLeftOf="@+id/button_green"
        android:layout_toStartOf="@+id/button_green" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_yellow"
        android:background="#fbff00"
        android:maxWidth="130dp"
        android:maxHeight="130dp"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:layout_below="@+id/button_green"
        android:layout_alignLeft="@+id/button_green"
        android:layout_alignStart="@+id/button_green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your score:"
        android:id="@+id/textView_yourscore"
        android:layout_below="@+id/button_blue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textSize="30dp" />

</RelativeLayout>
