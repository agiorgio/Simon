<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartScreenActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_simonicon"
        android:src="@drawable/simon_icon"
        android:layout_above="@+id/button_start"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Simon!"
        android:id="@+id/textView_welcometosimon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start"
        android:id="@+id/button_start"
        android:textSize="20dp"
        android:layout_above="@+id/button_soundsettings"
        android:layout_alignLeft="@+id/imageView_simonicon"
        android:layout_alignStart="@+id/imageView_simonicon"
        android:layout_alignRight="@+id/imageView_simonicon"
        android:layout_alignEnd="@+id/imageView_simonicon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_soundsettings"
        android:id="@+id/button_soundsettings"
        android:textSize="20dp"
        android:layout_above="@+id/button_highscore"
        android:layout_alignLeft="@+id/button_start"
        android:layout_alignStart="@+id/button_start"
        android:layout_alignRight="@+id/imageView_simonicon"
        android:layout_alignEnd="@+id/imageView_simonicon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_highscore"
        android:id="@+id/button_highscore"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:layout_alignLeft="@+id/button_soundsettings"
        android:layout_alignStart="@+id/button_soundsettings"
        android:layout_alignRight="@+id/imageView_simonicon"
        android:layout_alignEnd="@+id/imageView_simonicon" />

</RelativeLayout>
